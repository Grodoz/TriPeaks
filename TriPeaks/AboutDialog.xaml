<Window x:Class="TriPeaks.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About TriPeaks"
        Height="320" Width="325"
        Background="{StaticResource NeutralGrey}">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseExecuted" />
    </Window.CommandBindings>
    
    <Window.InputBindings>
        <KeyBinding Command="ApplicationCommands.Close" Key="Enter" />
        <KeyBinding Command="ApplicationCommands.Close" Key="Escape" />
    </Window.InputBindings>
    
    <DockPanel LastChildFill="False">
        <!-- There will be some sort of 'header image' at the top. -->
        <Image DockPanel.Dock="Top" />
        
        <!-- And of course there will be the TriPeaks icon.s -->
        <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Run>TriPeaks</Run>
            <LineBreak />
            <Run>&#169; jhinder 2015</Run>
        </TextBlock>
        
        <Button Command="ApplicationCommands.Close"
                Content="OK"
                DockPanel.Dock="Bottom"
                HorizontalAlignment="Center" />
    </DockPanel>
</Window>
