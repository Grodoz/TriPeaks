<Window x:Class="TriPeaks.PlayerNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TriPeaks Player Name"
        Height="120" Width="270"
        SourceInitialized="Window_SourceInitialized">
    <Window.Resources>
        <RoutedUICommand x:Key="SaveCommand" />
        <RoutedUICommand x:Key="CancelCommand" />
        
        <Style TargetType="Button">
            <Setter Property="Width" Value="64" />
            <Setter Property="Margin" Value="32,0" />
        </Style>
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource SaveCommand}" Executed="SaveExecuted" />
        <CommandBinding Command="{StaticResource CancelCommand}" Executed="CancelExecuted" />
    </Window.CommandBindings>
    
    <Window.InputBindings>
        <KeyBinding Command="{StaticResource SaveCommand}" Key="Enter" />
        <KeyBinding Command="{StaticResource CancelCommand}" Key="Escape" />
    </Window.InputBindings>
    
    <StackPanel>
        <Label>Enter player name.</Label>
        <TextBox>Guest</TextBox>
        
        <StackPanel Orientation="Horizontal">
            <Button IsDefault="True" Command="{StaticResource SaveCommand}" Content="OK" />
            <Button Command="{StaticResource CancelCommand}" Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
